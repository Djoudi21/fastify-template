// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the User model
model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  email         String         @unique
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  // Add more user-specific fields as needed
  conversations Conversation[]
  sentMessages  Message[]      @relation("SentMessages")
}

// Define the Conversation model
model Conversation {
  id           Int       @id @default(autoincrement())
  title        String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  // Many-to-many relationship between User and Conversation
  participants User[]
  // One-to-many relationship between Conversation and Message
  messages     Message[]
}

// Define the Message model
model Message {
  id             Int          @id @default(autoincrement())
  content        String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  // Many-to-one relationship between Message and User
  sender         User         @relation("SentMessages", fields: [senderId], references: [id])
  senderId       Int
  // Many-to-one relationship between Message and Conversation
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId Int
}
